<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AEF4DC"
    tools:context=".CalorieCalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="28dp">

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tvBMR"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:padding="20dp"
            android:text="Your BMR is : "
            android:textColor="#FC18C81B"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/BMRDetails"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#133D61"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your BMR is : \nTo maintain Your weight you have to consume ... calories per day" />

        <RadioGroup
            android:id="@+id/rbGroup"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#133D61"
                android:text="Little or No exercise" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="match_parent"
                android:textColor="#133D61"
                android:layout_height="wrap_content"
                android:text="Moderately active" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="match_parent"
                android:textColor="#133D61"
                android:layout_height="wrap_content"
                android:text="daily Active " />

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#133D61"
                android:text="Very Intense" />
        </RadioGroup>


        <Button
            android:id="@+id/btnCalciBMR"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Calulate">

        </Button>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tvCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FC18C81B"
            android:text="3453 calories / day"
            android:visibility="invisible"
            android:textSize="45sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/getMeal"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:visibility="invisible"
            android:text="Get Meal" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>